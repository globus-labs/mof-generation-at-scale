&GLOBAL
   PREFERRED_DIAG_LIBRARY  ELPA
   RUN_TYPE ENERGY
   PROJECT DDEC-MOFA
   PRINT_LEVEL MEDIUM
&END GLOBAL

&FORCE_EVAL
   &DFT
      BASIS_SET_FILE_NAME BASIS_MOLOPT  ! file is available in cp2k/data, no need for local copies
      POTENTIAL_FILE_NAME GTH_POTENTIALS  ! file is available in cp2k/data, no need for local copies

      CHARGE 0  ! Species should be charged balanced

      &QS
        METHOD GPW
      &END QS

      ! command to print cube file, rename cube file to "valance_density.cube" for DDEC Chargemol usage
      &PRINT
         &E_DENSITY_CUBE ON
           FILENAME valence_density.cube
           STRIDE 1 1 1
         &END E_DENSITY_CUBE
      &END

      ! I guess no more OT?
      &SCF
         &MIXING
            METHOD BROYDEN_MIXING
            ALPHA 0.4
            NMIXING 16
         &END MIXING
      &END SCF

      &XC
         &XC_FUNCTIONAL PBE
         &END XC_FUNCTIONAL
         &VDW_POTENTIAL
            DISPERSION_FUNCTIONAL PAIR_POTENTIAL
            &PAIR_POTENTIAL
                TYPE DFTD3
                PARAMETER_FILE_NAME dftd3.dat  ! file is available in cp2k/data, no need for local copies
                REFERENCE_FUNCTIONAL PBE
            &END PAIR_POTENTIAL
        &END VDW_POTENTIAL
      &END XC

      &MGRID
         NGRIDS 5
         CUTOFF [Ry] 600
         REL_CUTOFF [Ry] 60
      &END MGRID
   &END DFT
&END FORCE_EVAL
