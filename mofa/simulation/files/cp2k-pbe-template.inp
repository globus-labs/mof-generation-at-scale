&GLOBAL
  PREFERRED_DIAG_LIBRARY  ELPA
&END GLOBAL
&FORCE_EVAL
   &DFT
      CHARGE 0  ! Species should be charged balanced

      &QS
        EPS_DEFAULT 1.0E-7
        EXTRAPOLATION_ORDER 3
        EXTRAPOLATION PS
      &END

      ! command to print cube file, rename cube file to "valance_density.cube" for DDEC Chargemol usage
      &PRINT
         &E_DENSITY_CUBE ON
            FILENAME =valence_density.cube
            STRIDE 1 1 1
         &END E_DENSITY_CUBE
      &END

      &SCF
         &MIXING
            METHOD BROYDEN_MIXING
            ALPHA 0.4
            NMIXING 16
         &END MIXING
      &END SCF

      &XC
         &XC_FUNCTIONAL PBE
         &END XC_FUNCTIONAL
         &VDW_POTENTIAL
            DISPERSION_FUNCTIONAL PAIR_POTENTIAL
            &PAIR_POTENTIAL
                TYPE DFTD3
                PARAMETER_FILE_NAME dftd3.dat  ! file is available in cp2k/data, no need for local copies
                REFERENCE_FUNCTIONAL PBE
            &END PAIR_POTENTIAL
        &END VDW_POTENTIAL
      &END XC

      &MGRID
         NGRIDS 5
         REL_CUTOFF [Ry] 50
      &END MGRID
   &END DFT
&END FORCE_EVAL
